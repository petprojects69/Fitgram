<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/root_margin_top"
    android:background="@color/green"
    android:padding="@dimen/root_padding_horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/exercise_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/child_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_content_padding">

            <TextView
                android:id="@+id/exercise_title_textView"
                style="@style/ItemTitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exercise_poster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Название упражнения" />

            <ImageView
                android:id="@+id/exercise_poster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_launcher_background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_change"
        android:layout_width="@dimen/width_btn_item"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/root_padding_horizontal"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/exercise_cardView"
        app:layout_constraintStart_toEndOf="@id/exercise_cardView"
        app:layout_constraintTop_toTopOf="@id/exercise_cardView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_edit_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/width_btn_item"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/root_padding_horizontal"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/exercise_cardView"
        app:layout_constraintEnd_toStartOf="@id/exercise_cardView"
        app:layout_constraintTop_toTopOf="@id/exercise_cardView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_delete_outline_24" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>