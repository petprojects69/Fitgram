<?xml version="1.0" encoding="utf-8"?>
<resources>

    // Text Style
    <style name="FitgramTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">monospace</item>
    </style>

    <style name="ItemTitleTextStyle" parent="FitgramTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSecondaryTextStyle" parent="FitgramTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    // FAB
    <style name="ExtendedFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textAppearance">@style/FitgramTextStyle</item>
        <item name="android:textSize">16sp</item>
    </style>

    // Bottom Navigation View
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_item</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_item</item>
    </style>

    // AppBar
    <style name="LabelStyle" parent="FitgramTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    // UserProfileFragment UserName
    <style name="UserNameStyle" parent="FitgramTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    // UserProfileFragment UserInformations
    <style name="UserInfoStyle" parent="FitgramTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name= "android:layout_gravity">start</item>
    </style>

    // ExerciseItem Title
    <style name="ItemTitleStyle">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    // ExerciseItem Description
    <style name="ItemDescriptionStyle">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:shadowColor">#99000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>